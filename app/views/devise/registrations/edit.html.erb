<div class="p-5 mx-auto" style="width: 800px;" >


<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= invisible_captcha %>
  <div class="form-inputs">
    <%= f.input :email,
                placeholder: 'Email',
                required: true,
                label:false,
                input_html: { autocomplete: "email" }%>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                placeholder: 'New Password',
                label:false,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                placeholder: 'Password Confirmation',
                label:false,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                placeholder: 'Enter your current Password',
                label:false,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>

    <%= f.input :name,
                required: true,
                placeholder: 'Name',
                label:false,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :surname,
                placeholder: 'Surname',
                label:false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "surname" }%>
    <%= f.input :phone,
                placeholder: 'Phone number',
                label:false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Phone Number" }%>
    <%= f.input :address,
                placeholder: 'Street',
                label:false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :city,
                placeholder: 'City',
                label:false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "city" }%>
    <%= f.input :zip,
                placeholder: 'Postal code',
                label:false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "zip" }%>
    <%= f.input :country,
                placeholder: 'Country',
                label:false,
                as: :string,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "country" }%>

<label class="btn btn-primary">
  Add a Profile Picture
  <span style="display:none;">
       <%= f.file_field :avatar,
        placeholder: 'Upload picture',
        direct_upload: true
        %>
  </span>
</label>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" , :class => "btn btn-outline-secondary mt-2 " %>
  </div>
<% end %>


<p> <%= link_to "Unhappy?, Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-outline-secondary mt-2" %></p>

<%= link_to "Back", :back, :class => "btn btn-outline-secondary mt-2"  %>

  </div>
