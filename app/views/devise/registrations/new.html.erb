<div class="container">
<div class="p-5 mx-auto" style="width: 800px;" >

<h2 class="my-4">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <%= invisible_captcha %>
  <div class="form-inputs">
    <%= f.input :email,
                placeholder: 'Email',
                required: true,
                label:false,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                placeholder: 'Password',
                required: true,
                label:false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                placeholder: 'Password Confirmation',
                label:false,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%#= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%#= f.input :surname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "surname" }%>
    <%#= f.input :phone,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Phone Number" }%>
    <%#= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" }%>
    <%#= f.input :city,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "city" }%>
    <%#= f.input :zip,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "zip" }%>
    <%#= f.input :country,
                as: :string,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "country" }%>
    <%#= f.file_field :avatar,
        placeholder: 'Upload picture',
        direct_upload: true
        %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn secondary-cta' %>

  </div>
<% end %>

<%#= render "devise/shared/links" %>


</div>
</div>
