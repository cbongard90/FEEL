<h1>Select your location</h1>
<% if (params[:type] == 'earth') %>
  <p>Welcome to Earth</p>

    <div id="map" class="mx-auto"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">>
    </div>





<% elsif (params[:type] == 'outer space') %>
  <p>Welcome to Outer Space</p>
  <div class="container">
    <div class="cards">
      <% @space_locations.each do |location| %>
        <%= link_to new_box_path(:location => location), class:'text-decoration-none' do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path location.picture_path %>)">
            <%= location.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <p>Welcome to MetaVerse</p>
  <div class="container">
    <div class="cards">
      <% @metaverse_locations.each do |location| %>
        <%= link_to new_box_path(:location => location), class:'text-decoration-none' do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path location.picture_path %>)">
            <%= location.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
  <%= link_to 'Go Back', begin_path, class:"btn secondary-cta-w" %>

  <div>
<h2>Our Pricings</h2>
  <ul>
  <% @packages.each do |package|%>
      <% if package.package_type == params[:type] %>
        <li>
          <p>
            <%= package.size %>
            <%= package.base_price %>
          </p>
        </li>
      <% end %>
    <% end %>
  </ul>
  </div>
